{
  "name": "@volleyball-visualizer/court",
  "version": "1.0.0",
  "description": "A comprehensive, reusable volleyball court visualization component for React with drag-and-drop positioning, rules validation, and extensive customization options",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.esm.js",
      "require": "./dist/components.js"
    },
    "./controls": {
      "types": "./dist/controls.d.ts",
      "import": "./dist/controls.esm.js",
      "require": "./dist/controls.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.esm.js",
      "require": "./dist/utils.js"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./presets": {
      "types": "./dist/presets.d.ts",
      "import": "./dist/presets.esm.js",
      "require": "./dist/presets.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "rollup -c rollup.config.js --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test",
    "size": "size-limit",
    "analyze": "npm run build && bundlesize"
  },
  "keywords": [
    "volleyball",
    "visualization",
    "react",
    "component",
    "sports",
    "court",
    "formation",
    "drag-and-drop",
    "typescript",
    "rules-engine",
    "coaching",
    "training",
    "analytics"
  ],
  "author": {
    "name": "Volleyball Visualizer Team",
    "email": "team@volleyball-visualizer.com",
    "url": "https://volleyball-visualizer.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/volleyball-visualizer/court#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/volleyball-visualizer/court.git"
  },
  "bugs": {
    "url": "https://github.com/volleyball-visualizer/court/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "framer-motion": ">=10.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@size-limit/preset-small-lib": "^8.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "bundlesize": "^0.18.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "size-limit": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "50 KB"
    }
  ],
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50 KB"
    },
    {
      "path": "./dist/index.esm.js",
      "maxSize": "50 KB"
    }
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/volleyball-visualizer"
  }
}